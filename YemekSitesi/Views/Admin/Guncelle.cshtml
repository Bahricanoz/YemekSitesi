@model YemekSitesi.Models.Entity.Tbl_Admin
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-top:20px;">
    <h2>Admin Güncelleme Sayfası</h2>
</div>
@using (Html.BeginForm("Guncelle", "Admin", FormMethod.Post))
{
    <div style="margin-top:20px;">
        <label>Admin Id:</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:20px;">
        <label>Ad:</label>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:20px;">
        <label>Soyad:</label>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:20px;">
        <label>Mail:</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:20px;">
        <label>Kullanıcı Adı:</label>
        @Html.TextBoxFor(x => x.kullaniciadi, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:20px;">
        <label>Şifre:</label>
        @Html.TextBoxFor(x => x.sifre, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:20px;">
        <button class="btn btn-success">Admin Güncelle</button>
    </div>
}
