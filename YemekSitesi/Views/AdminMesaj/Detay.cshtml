@model YemekSitesi.Models.Entity.Tbl_Mesaj
@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin:20px;">
    <h2>Mesaj Detay Sayfası</h2>
</div>
<form class="form-group">
    <div style="margin-top:20px;">
        <label>Mesaj Id:</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:20px;">
        <label>İsim:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:20px;">
        <label>Mail:</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:20px;">
        <label>Telefon:</label>
        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:20px;">
        <label>Konu:</label>
        @Html.TextBoxFor(x => x.Konu, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:20px;">
        <label>Mesaj Id</label>
        @Html.TextAreaFor(x => x.Mesaj, new { @class = "form-control", @readonly = "readonly" })
    </div>
</form>
