@using YemekSitesi.Models.Entity
@model List<Tbl_Yemek>
@{
    ViewBag.Title = "Blogdetay";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="single">
    <div class="container">
        <div class="col-md-8 single-main">
            <div class="single-grid">
                @foreach (var x in Model)
                {
                    <img src="@x.Resim" alt="" style="width:730px; height:365px;" />
                    <h2 style="color:deepskyblue; margin-top:20px;">@x.Yemekad</h2>
                    <p>
                        Malzemeler<br />
                        @x.Malzemeler
                    </p>
                    <p>
                        İçerik <br />
                        @x.icerik
                    </p>

                }
            </div>
           @Html.Action("Yemekyorum")
           @Html.Action("Yorumyapma")
        </div>

        <div class="col-md-4 side-content">
            @Html.Action("Sonyemekler")
            @Html.Action("Sonyorumlar")
            <div class="clearfix"></div>  
            @Html.Action("Kategoriler")
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>


